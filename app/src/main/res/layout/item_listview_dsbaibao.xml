<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/_15sdp"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/itemHotNew"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_130sdp"
        android:layout_margin="@dimen/_10sdp"
        android:background="@drawable/hotnew_backgroup">

        <ImageView
            android:id="@+id/imgHotNews"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/tvHotTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/colorBlackv2"
            android:fontFamily="sans-serif-black"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/_7sdp"
            android:paddingTop="@dimen/_8sdp"
            android:paddingBottom="@dimen/_8sdp"
            android:text="abc"
            android:textColor="@color/colorWrite"
            android:textSize="18sp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/itemNews"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_anhbaibao"
            android:layout_width="@dimen/_120sdp"
            android:layout_height="@dimen/_70sdp"
            android:layout_marginLeft="@dimen/_4sdp"
            android:src="@drawable/nointernet" />

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_tieudebaibao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_4sdp"
                android:layout_marginTop="@dimen/_4sdp"
                android:fontFamily="sans-serif-black"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/_11sdp"
                android:textStyle="normal" />

            <TextView

                android:id="@+id/tvDes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_tieudebaibao"
                android:layout_margin="@dimen/_5sdp"
                android:ellipsize="end"
                android:lines="2"
                android:maxLines="2"


                android:textColor="@color/colorBlack"
                android:textSize="@dimen/_9sdp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/tvTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:text="abc"
                android:textSize="@dimen/_8sdp" />

        </RelativeLayout>
    </LinearLayout>


</LinearLayout>
